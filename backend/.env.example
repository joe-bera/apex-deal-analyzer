# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-key-here

# Anthropic API (for AI-powered data extraction)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# JWT Configuration (for custom auth if needed)
JWT_SECRET=your-secure-random-secret-here-change-in-production
JWT_EXPIRATION=24h

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=20

# Logging
LOG_LEVEL=info

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Optional: For production deployments
# DATABASE_URL=postgresql://user:password@localhost:5432/apex_analyzer
